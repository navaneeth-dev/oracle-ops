{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    ":semanticCommits"
  ],
  "timezone": "Asia/Kolkata",
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "helmv3": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  suppressNotifications: [
    "prEditedNotification",
    "prIgnoreNotification",
  ],
  packageRules: [
    {
      description: "Auto-merge terraform",
      matchDatasources: [
        "terraform-module",
        "terraform-provider"
      ],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
    },
  ],
}
